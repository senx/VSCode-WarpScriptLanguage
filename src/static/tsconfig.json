{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../../src/static",
		"outDir": "../../out/static",
    "module": "ESNext",
		"target": "ES2020",
		"lib": [
			"ES2020",
      "DOM"
		],
		"sourceMap": true,
		/* Additional Checks */
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "../../node_modules",
    "../../.vscode-test",
    "../../monarch.ts",
    "../../assets"
  ]
}