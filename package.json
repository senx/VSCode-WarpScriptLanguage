{
	"name": "warpscript-language",
	"description": "Warpscript support",
	"author": {
		"name": "Xavier MARIN"
	},
	"icon": "images/warp10.png",
	"license": "Apache-2.0",
	"version": "0.0.14",
	"publisher": "xavmarin",
	"engines": {
		"vscode": "^1.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Giwi/VSCode-WarpScriptLangage"
	},
	"bugs": {
		"url": "https://github.com/Giwi/VSCode-WarpScriptLangage/issues"
	},
	"categories": [
		"Languages"
	],
	"galleryBanner": {
		"color": "#FF9900",
		"theme": "dark"
	},
	"activationEvents": [
		"onLanguage:warpscript"
	],
	"main": "./client/out/src/extension",
	"contributes": {
		"snippets": [
			{
				"language": "warpscript",
				"path": "./client/snippets/snippets.json"
			}
		],
		"keybindings": [
			{
				"command": "extension.execWS",
				"key": "ctrl+alt+e",
				"when": "editorFocus && !replaceActive && !searchViewletVisible && !findWidgetVisible"
			},
			{
				"command": "extension.execWSOnSelection",
				"key": "ctrl+alt+a",
				"when": "editorHasSelection && editorFocus && !replaceActive && !searchViewletVisible && !findWidgetVisible"
			}
		],
		"commands": [
			{
				"command": "extension.execWS",
				"title": "Run Warpscript",
				"category": "Warpscript",
				"icon": {
					"light": "./image/run.svg",
					"dark": "./image/run_inverse.svg"
				}
			},
			{
				"command": "extension.execWSOnSelection",
				"title": "Run Warpscript on selection"
			}

		],
		"languages": [
			{
				"id": "warpscript",
				"aliases": [
					"WarpScript",
					"warpscript"
				],
				"extensions": [
					"mc2"
				],
				"configuration": "./client/syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "warpscript",
				"scopeName": "source.warpscript",
				"path": "./client/syntaxes/warpscript.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "WarpScript",
			"properties": {
				"warpscript.Warp10URL": {
					"scope": "resource",
					"type": "String",
					"default": "http://127.0.0.1:8080/api/v0/exec",
					"description": "Warp10 URL"
				},
				"warpscript.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "messages",
					"description": "Traces the communication between VSCode and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"postinstall": "cd server && npm install && cd ../client && npm install && bower install && cd ..",
		"compile": "tsc -p client/tsconfig.json && cd server && npm run installServer && cd .. && tsc -p server/tsconfig.json",
		"compile:client": "tsc -p client/tsconfig.json",
		"watch:client": "tsc -w -p client/tsconfig.json",
		"compile:server": "cd server && npm run installServer && cd .. && tsc -p server/tsconfig.json",
		"watch:server": "cd server && npm run installServer && cd .. && tsc -w -p server/tsconfig.json"
	},
	"devDependencies": {
		"@types/js-yaml": "3.11.1",
		"@types/mocha": "^5.2.0",
		"@types/node": "7.0.43",
		"js-yaml": "3.11.0",
		"plist": "3.0.1",
		"typescript": "^2.8.3",
		"vscode": "^1.1.14",
		"vscode-textmate": "3.3.3"
	},
	"dependencies": {}
}
