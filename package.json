{
	"name": "warpscript-language",
	"displayName": "WarpScript language support",
	"description": "WarpScript support",
	"author": {
		"name": "Xavier MARIN"
	},
	"icon": "images/warp10.png",
	"license": "Apache-2.0",
	"version": "0.0.25",
	"publisher": "xavmarin",
	"engines": {
		"vscode": "^1.19.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Giwi/VSCode-WarpScriptLangage"
	},
	"bugs": {
		"url": "https://github.com/Giwi/VSCode-WarpScriptLangage/issues"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters"
	],
	"keywords": [
		"Warp 10",
		"WarpScript",
		"Geo Times Series",
		"Times Series"
	],
	"galleryBanner": {
		"color": "#FF9900",
		"theme": "dark"
	},
	"activationEvents": [
		"onLanguage:warpscript"
	],
	"main": "./out/extension",
	"contributes": {
		"snippets": [
			{
				"language": "warpscript",
				"path": "./snippets/snippets.json"
			}
		],
		"keybindings": [
			{
				"command": "extension.execWS",
				"key": "ctrl+alt+e",
				"when": "editorFocus && !replaceActive && !searchViewletVisible && !findWidgetVisible"
			},
			{
				"command": "extension.execWSOnSelection",
				"key": "ctrl+alt+a",
				"when": "editorHasSelection && editorFocus && !replaceActive && !searchViewletVisible && !findWidgetVisible"
			}
		],
		"commands": [
			{
				"command": "extension.execWS",
				"title": "Run WarpScript",
				"category": "WarpScript",
				"icon": {
					"light": "./image/run.svg",
					"dark": "./image/run_inverse.svg"
				}
			},
			{
				"command": "extension.execWSOnSelection",
				"title": "Run WarpScript on selection",
				"category": "WarpScript"
			}
		],
		"languages": [
			{
				"id": "warpscript",
				"aliases": [
					"WarpScript",
					"warpscript"
				],
				"extensions": [
					"mc2"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "warpscript",
				"scopeName": "source.warpscript",
				"path": "./syntaxes/warpscript.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "WarpScript",
			"properties": {
				"warpscript.theme" : {
					"enum": [
            "light",
            "dark"
          ],
					"scope": "window",
					"default": "light",
				"description": "Data visualization theme"
				},
				"warpscript.Warp10URL": {
					"scope": "resource",
					"type": "string",
					"default": "http://127.0.0.1:8080/api/v0/exec",
					"description": "Warp 10 URL"
				},
				"warpscript.useGZIP": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Use GZIP compression"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/js-yaml": "3.11.1",
		"@types/mocha": "^5.2.0",
		"@types/node": "7.0.43",
		"js-yaml": "3.11.0",
		"lodash": "^4.17.10",
		"plist": "3.0.1",
		"showdown": "^1.8.6",
		"typescript": "3.0.1",
		"vscode": "1.1.18",
		"vscode-textmate": "4.0.1"
	},
	"dependencies": {
		"@types/request": "2.47.1",
		"request": "2.87.0",
		"vsce": "^1.46.0",
		"vscode-languageclient": "4.4.0"
	}
}
