{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"target": "es2019",
		"lib": ["ES2019"],
		"sourceMap": true,
		"rootDir": "src",
		/* Additional Checks */
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"monarch.ts",
		"assets",
		"src/flows-beautify-typescript/js_beautify.d.ts",
		"src/flows-beautify-typescript/js_beautify.ts",
		"src/flowsGlobals.ts",
		"src/wsGlobals.ts"
	]
}