{

    //"wordPattern": "(\\w)",
    "wordPattern": "((->)?(((\\w+[\\w\\d])+\\.(\\w+[\\w\\d])+)|(\\w+[\\w\\d]+))(->)?)|(((\\!=)|(\\!)|(%)|(&&)|(&)|(\\*\\*)|(\\*)|(\\+\\!)|(\\+)|(>>>)|(>>)|(\\-)|(\\/)|(<<)|(<=)|(==)|(>=)|(>)|(<)|(\\^)|(\\|\\|)|(\\|)|(~=)|(~)))",
    "comments": {
        "lineComment":  "//",
        "blockComment": [ "/**", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "/*", "close": " */", "notIn": ["string"] }
    ],
    "autoCloseBefore": ";:.,=}])> \n\t",

    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""],
    ],
    "indentationRules": {
        "increaseIndentPattern" : "^\\s*(\\[|\\{|\\(|\\[[|<')\\b.*$",
        "decreaseIndentPattern" : "^\\s*(\\]|\\}|\\)|\\]]|'>)\\b.*$"
    }
 }