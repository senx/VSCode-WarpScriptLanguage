{

    "wordPattern": "((->|\\$)?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\|\\;\\:\\'\\\"\\,\\<\\>\/\\?\\s\\t])+",
    "comments": {
        "lineComment":  "//",
        "blockComment": [ " /*", "*/ " ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<%", "%>"],
        ["<'", "'>"],
        ["[[", "]]"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}", "notIn": ["string", "comment"] },
        { "open": "[", "close": "]", "notIn": ["string", "comment"] },
        { "open": "(", "close": ")", "notIn": ["string", "comment"] },
        { "open": "<%", "close": "%>", "notIn": ["string", "comment"] },
        { "open": "[[", "close": "]]", "notIn": ["string", "comment"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "<'", "close": "\n'>", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
        { "open": "`", "close": "`", "notIn": ["string", "comment"] },
        { "open": "/*", "close": " */", "notIn": ["string", "comment"] }
    ],
    "autoCloseBefore": ";:.,=}])>% \n\t",

    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["[[", "]]"],
        ["<%", "%>"],
        ["<'", "'>"],
        ["'", "'"],
        ["\"", "\""],
        ["`", "`"]
    ],
    "indentationRules": {
        "increaseIndentPattern" : "^\\s*(<%|\\[|\\{|\\(|\\[|<')\\b.*$",
        "decreaseIndentPattern" : "^\\s*(%>|\\]|\\}|\\)|\\]|'>)\\b.*$"
    }
 }